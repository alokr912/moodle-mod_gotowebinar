<table class="generaltable">
    <thead>
    <tr>
        <th class="header c0 lastcol" style="width:30%;" scope="col" colspan="2">
            {{#str}}pluginname, mod_gotowebinar{{/str}}
        </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="cell c0" style="width:30%;text-align:left;" colspan="1">
            {{#str}}meetingtitle, mod_gotowebinar{{/str}}
        </td>
        <td class="cell c1 lastcol" style="width:70%;text-align:left;" colspan="1">
            <b>{{meetingtitle}}</b>
        </td>
    </tr>
    <tr>
        <td class="cell c0" style="width:30%;text-align:left;" colspan="1">
            {{#str}}meetingdescription, mod_gotowebinar{{/str}}
        </td>
        <td class="cell c1 lastcol" style="width:70%;text-align:left;" colspan="1">
            <b>{{meetingdescription}}</b>
        </td>
    </tr>
    <tr>
        <td class="cell c0" style="width:30%;text-align:left;" colspan="1">
            {{#str}}meetingstartenddate, mod_gotowebinar{{/str}}
        </td>
        <td class="cell c1 lastcol" style="width:70%;text-align:left;" colspan="1">
            <b>{{meetingstartenddate}}</b>
        </td>
    </tr>
    <tr>
        <td class="cell c0" style="width:30%;text-align:left;" colspan="1">
            {{#str}}meetingenddateandtime, mod_gotowebinar{{/str}}
        </td>
        <td class="cell c1 lastcol" style="width:70%;text-align:left;" colspan="1">
            <b>{{meetingenddateandtime}}</b>
        </td>
    </tr>
    <tr class="lastrow">
        <td class="cell c0 lastcol" style="width:30%;text-align:center;" colspan="2">
            <a target="_blank" class="btn btn-primary"
               href="{{joinurl}}">
                {{#str}}joinmeeting, mod_gotowebinar{{/str}}
            </a>
        </td>
    </tr>
    </tbody>
</table>